/* pages/unsplash/index.wxss */
.swiper-tab{
  display: flex;
  position: fixed;
  top: 0px;
  width: 100%;  
  text-align: center;  
  line-height: 60rpx;
  background-color: #fff;
  z-index: 10;
}  
.swiper-tab-list{
  display: inline-block;
  flex: 1;
  font-size: 32rpx;
  text-align: center;
  color: #6f6f6f;  
}  
.active{
  color: #1296db;  
  border-bottom: 5rpx solid #1296db;
}
.list{
  margin-top: 60rpx;
}
.photo-component{
  position: relative;
  width: 100%;
  margin-bottom: 24rpx;
}
.photo-component-img{
  display: block;
  width: 100%;
  height: 100%;
  font-family: object-fit\:cover;
  -o-object-fit: cover;
  object-fit: cover;
  cursor: zoom-in;
  background-color: #ddd;
}
.photo-component-user-info{
  position: absolute;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  bottom: 20rpx;
  width: 100%;
  padding: 0px 30rpx;
  z-index: 3;
}
.photo-component-user-img{
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
}
.photo-component-user-name{
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #fff;
}